<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/recycler_view_width"
    android:layout_height="@dimen/recycler_view_height"
    android:layout_marginLeft="0.5dp"
    android:layout_marginRight="0.5dp"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_list_feature"
        android:layout_width="@dimen/item_list_filter_size"
        android:layout_height="@dimen/item_list_filter_size" />

    <TextView
        android:id="@+id/tv_item_list_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_filter_name_size"
        android:layout_marginTop="@dimen/item_recycler_view_margin" />
</LinearLayout>